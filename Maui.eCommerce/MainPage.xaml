<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.MainPage"> <!-- Namespace for the MainPage class-->

    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="{Binding Display}"/>
            <Button
                Text="Inventory Management"
                    Clicked="InventoryManagementClicked"/>
            <Button
                Text="Shopping"
                    Clicked="ShoppingClicked" />
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
