<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.ShoppingView"
             Title="Shopping Cart">
    <VerticalStackLayout>
        <Label 
            Text="Your Shopping Cart"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            
        <ListView ItemsSource="{Binding CartItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Name}"/>
                            <Label Grid.Column="1" Text="{Binding Price, StringFormat='${0:F2}'}"/>
                            <Button Grid.Column="2" Text="Remove"
                                    Clicked="RemoveFromCartClicked"
                                    CommandParameter="{Binding ID}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <!-- Update text bindings -->
    <Label Text="{Binding TotalText}"
        FontSize="Medium"
        FontAttributes="Bold"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        
    <Label Text="{Binding TaxText}"
        FontSize="Medium"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        
    <Label Text="{Binding TotalWithTaxText}"
        FontSize="Medium"
        FontAttributes="Bold"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
               
        <Button
            Text="Checkout" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Clicked="CheckoutClicked" />
            
        <Button
            Text="Return to Management Menu" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Clicked="ReturnToManagementMenuClicked" />
    </VerticalStackLayout>
</ContentPage>