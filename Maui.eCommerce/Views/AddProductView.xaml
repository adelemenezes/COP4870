<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.AddProductView"
             Title="Add Product">
    <VerticalStackLayout Spacing="15" Padding="20">
        
        <!-- Product Name -->
        <Label Text="Product Name:"/>
        <Entry Text="{Binding Name}" Placeholder="Required"/>
        
        <!-- Quantity -->
        <Label Text="Quantity:"/>
        <Entry Text="{Binding Quantity}" Keyboard="Numeric"/>
        
        <!-- Price -->
        <Label Text="Price:"/>
        <Entry Text="{Binding Price}" Keyboard="Numeric"/>
        
        <!-- Rating -->
        <Label Text="Rating (1-5):"/>
        <Entry Text="{Binding Rating}" Keyboard="Numeric"/>
        
        <!-- Action Buttons -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Cancel" 
                    Clicked="ReturnToInventoryClicked"
                    Grid.Column="0"/>
            <Button Text="Add Product" 
                    Clicked="AddProductClicked"
                    Grid.Column="1"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>