<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.SettingsView"
             Title="Settings">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Tax Rate (updated in real-time)"
               FontSize="Large"
               HorizontalOptions="Center"/>
               

    <VerticalStackLayout Spacing="10">
        <Label Text="{Binding TaxRate, StringFormat='Current Tax Rate: {0:F1}%'}"
                FontSize="Medium"/>
                
        <Slider Minimum="0" Maximum="25" 
                Value="{Binding TaxRate, Mode=TwoWay}"
                ThumbColor="White"/>
    </VerticalStackLayout>
        
    <Button Text="Return to Management Menu" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Clicked="GoBackClicked" />
    </VerticalStackLayout>
</ContentPage>