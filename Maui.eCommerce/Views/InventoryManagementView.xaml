<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.InventoryManagementView"
             Title="Inventory Management"
             NavigatedTo="OnNavigatedTo">

    <VerticalStackLayout Padding="10" Spacing="15">

        <Label Text="Inventory Management"
               FontSize="Large"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
               
        <!-- Sorting Bar: Label + Options inline -->
        <HorizontalStackLayout Spacing="10" Padding="0,0,0,10">
            <Label Text="Sort by:"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <Label Text="ID"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Label Text="Name"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Label Text="Price"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Header Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/> <!-- ID -->
                <ColumnDefinition Width="3*"/> <!-- Name -->
                <ColumnDefinition Width="2*"/> <!-- Quantity -->
                <ColumnDefinition Width="2*"/> <!-- Price -->
                <ColumnDefinition Width="2*"/> <!-- Rating -->
                <ColumnDefinition Width="3*"/> <!-- Spacer -->
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Text="ID" FontAttributes="Bold"/>
            <Label Grid.Column="1" Text="Name" FontAttributes="Bold"/>
            <Label Grid.Column="2" Text="Qty" FontAttributes="Bold" HorizontalOptions="End"/>
            <Label Grid.Column="3" Text="Price" FontAttributes="Bold" HorizontalOptions="End"/>
            <Label Grid.Column="4" Text="Rating" FontAttributes="Bold" HorizontalOptions="Center"/>
        </Grid>

        <!-- Product List -->
        <ListView ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/> <!-- ID -->
                                <ColumnDefinition Width="3*"/> <!-- Name -->
                                <ColumnDefinition Width="2*"/> <!-- Quantity -->
                                <ColumnDefinition Width="2*"/> <!-- Price -->
                                <ColumnDefinition Width="2*"/> <!-- Rating -->
                                <ColumnDefinition Width="1*"/> <!-- Edit -->
                                <ColumnDefinition Width="1*"/> <!-- Add -->
                                <ColumnDefinition Width="1*"/> <!-- Delete -->
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Text="{Binding ID}" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding Name}" VerticalOptions="Center"/>
                            <Label Grid.Column="2" Text="{Binding Quantity}" 
                                   HorizontalOptions="End" VerticalOptions="Center"/>
                            <Label Grid.Column="3" Text="{Binding Price, StringFormat='{0:C}'}" 
                                   HorizontalOptions="End" VerticalOptions="Center"/>
                            <Label Grid.Column="4" Text="{Binding Rating}" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Button Grid.Column="5" Text="Edit"
                                    Clicked="EditClicked"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Center"/>
                            <Button Grid.Column="6" Text="Add"
                                    Clicked="AddToCartClicked"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Center"/>
                            <Button Grid.Column="7" Text="Del"
                                    Clicked="DeleteClicked"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Action Buttons -->
        <Button Text="Add New Product" 
                Margin="0,10"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Clicked="AddClicked" />
                
        <Button Text="Return to Management Menu" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Clicked="ReturnToManagementMenuClicked" />
                
    </VerticalStackLayout>
</ContentPage>
